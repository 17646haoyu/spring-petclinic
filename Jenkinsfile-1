pipeline {
    agent any
    tools { 
        maven 'Default Maven' 
        jdk 'JDK-17' 
        ansible 'Ansible'
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    sh 'java --version'
                ''' 
            }
        }

        stage ('Build') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[]])
                sh "${mvn}/bin/mvn package"
            }
            post {
                success {
                    ansiblePlaybook installation: 'Ansible', playbook: '/usr/share/jenkins/ref/playbook.yml'
                }
            }
        }
    }
}